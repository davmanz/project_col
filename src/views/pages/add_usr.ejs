<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Formulario de Registro</title>
        <%-include('../partials/head')%>
    </head>

    <body>
        <div class="container my-5">
            <h2 class="text-center mb-4 p-3 display-4" style="background-color: #faf9f8; color: #0056b3; border-radius: 0.5rem;">Registro de Usuario</h2>
            
            <form id="user-form" action="/addusr" method="post" enctype="multipart/form-data">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="name" class="form-label mb-2 fw-bold" style="color: #0056b3;">Nombres:</label>
                        <input type="text" class="form-control" id="name" name="name">
                        <div id="name-error" class="text-danger"></div>
                    </div>
                    <div class="col-md-6">
                        <label for="last_name" class="form-label mb-2 fw-bold" style="color: #0056b3;">Apellidos:</label>
                        <input type="text" class="form-control" id="last_name" name="last_name">
                        <div id="last-name-error" class="text-danger"></div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="id-type" class="form-label mb-2 fw-bold" style="color: #0056b3;">Tipo de Identificación:</label>
                        <select class="form-select" id="id_type" name="id_type">
                            <% documentTypes.forEach(function(type) { %>
                                <option value="<%= type.document_type %>"><%= type.name_document %></option>
                            <% }); %>
                        </select>
                        <div id="id-type-error" class="text-danger"></div>
                    </div>
                    <div class="col-md-6">
                        <label for="id-number" class="form-label mb-2 fw-bold" style="color: #0056b3;">Número de Identificación:</label>
                        <input type="text" class="form-control" id="id_number" name="id_number">
                        <div id="id-number-error" class="text-danger"></div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label for="email" class="form-label mb-2 fw-bold" style="color: #0056b3;">Correo Electrónico:</label>
                        <input type="email" class="form-control" id="email" name="email">
                        <div id="email-error" class="text-danger"></div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label for="password" class="form-label mb-2 fw-bold" style="color: #0056b3;">Contraseña:</label>
                        <input type="password" class="form-control" id="password" name="password">
                        <div id="password-error" class="text-danger"></div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label for="photo" class="form-label mb-2 fw-bold" style="color: #0056b3;">Foto Personal:</label>
                        <input type="file" class="form-control" id="photo" name="photo" accept="image/*">
                        <div id="photo-error" class="text-danger"></div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="isAdmin" name="isAdmin">
                            <label class="form-check-label fw-bold" for="isAdmin" style="color: #0056b3;">
                                Administrador
                            </label>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Guardar Usuario</button>
                </div>
            </form>
            <%-include('../partials/footer')%>
        </div>
        <script src="/js/validateAndCreateUser.js"></script>
    </body>
</html>
