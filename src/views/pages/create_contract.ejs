        function buscarUsuario() {
            // Lógica para buscar el usuario por el número de documento y actualizar el nombre de usuario
            // Esto es un placeholder. Debes reemplazarlo con tu lógica de búsqueda real.
            var documentNumber = document.getElementById('document-number').value;
            // Aquí iría la llamada AJAX o FETCH para buscar al usuario en la base de datos
            // Por ejemplo, puedes hacer algo como esto:
            /*
            fetch('/api/search-user?document=' + documentNumber)
                .then((response) => response.json())
                .then((data) => {
                    document.getElementById('user-name').value = data.userName;
                });
            */
        }
    </script>
</body>
</html>
